<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    tools:context=".lihaha.OrderDetilsActivity">

    <TextView android:id="@+id/dingdan"
     android:textColor="@color/colorBlack"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="@dimen/dp_25"
     android:text="订单状态"
     />
    <TextView
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_20"
        android:padding="@dimen/dp_10"
        android:text="已完成"
        />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@+id/dingdan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号码：182665655"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号码：182665655"
            />

        <TextView
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南先生   1777777777"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dp_16"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南先生   1777777777"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dp_16"
            />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_5"
        >
        <TextView
            android:id="@+id/message"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_25"
            android:text="订单信息"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:id="@+id/con1"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/shou_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textSize="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shou_img"
                android:text="钢琴一对一线赔"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintLeft_toRightOf="@id/img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shou_img"
                android:text="600*1"
                android:layout_marginLeft="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img"
                app:layout_constraintTop_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:id="@+id/con2"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/con1"
            android:layout_marginTop="@dimen/dp_50"
            >
            <TextView
                android:id="@+id/zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥60"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/jz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/zj"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/zj"
                app:layout_constraintRight_toRightOf="parent"

                />
            <TextView
                android:id="@+id/jz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/jz2"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-￥0"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorOrange"
                app:layout_constraintTop_toBottomOf="@id/jz2"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/jz4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总价"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/jz3"
                app:layout_constraintLeft_toLeftOf="parent"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥600"
                android:layout_marginTop="@dimen/dp_25"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/jz3"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_black"
        android:text="查看物流"
        android:layout_marginBottom="@dimen/dp_50"
        >

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>