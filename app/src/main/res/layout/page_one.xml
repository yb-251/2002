<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:src="@mipmap/vp1"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/vp1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_50">
        <ImageView
            android:id="@+id/img_1_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_1_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_2_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_2_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_3_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/img_3_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>