<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayActivity">

    <include layout="@layout/layout_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F3F3F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_order"
            android:orientation="vertical"
            android:padding="@dimen/dp_12"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_white_fillet"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="声乐系统课"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/tvBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="商户订单号：13376587484848484848"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="更多信息"
                android:drawableRight="@mipmap/down_blue"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/tvBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pay"
            android:orientation="vertical"
            android:padding="@dimen/dp_12"
            android:background="@drawable/shape_white_fillet"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="支付方式"
                android:textSize="@dimen/sp_18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/WeChat"
                    android:src="@drawable/WeChat"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="微信支付"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_12"
                    app:layout_constraintLeft_toRightOf="@id/WeChat"
                    app:layout_constraintTop_toTopOf="@id/WeChat"
                    app:layout_constraintBottom_toBottomOf="@id/WeChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/WeChat"
                    app:layout_constraintBottom_toBottomOf="@id/WeChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/alipay"
                    android:src="@drawable/Alipay"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="支付宝支付"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_12"
                    app:layout_constraintLeft_toRightOf="@id/alipay"
                    app:layout_constraintTop_toTopOf="@id/alipay"
                    app:layout_constraintBottom_toBottomOf="@id/alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/alipay"
                    app:layout_constraintBottom_toBottomOf="@id/alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/balance"
                    android:src="@drawable/balance"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="余额"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_12"
                    app:layout_constraintLeft_toRightOf="@id/balance"
                    app:layout_constraintTop_toTopOf="@id/balance"
                    app:layout_constraintBottom_toBottomOf="@id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/balance"
                    app:layout_constraintBottom_toBottomOf="@id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:background="@color/colorGray"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/coupon"
                    android:src="@mipmap/coupon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/dp_9"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="使用优惠劵"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginLeft="@dimen/dp_24"
                    app:layout_constraintLeft_toRightOf="@id/coupon"
                    app:layout_constraintTop_toTopOf="@id/coupon"
                    app:layout_constraintBottom_toBottomOf="@id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="去查看"
                    android:textColor="@color/tvGray"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/coupon"
                    app:layout_constraintBottom_toBottomOf="@id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/dp_12"
            android:background="@drawable/shape_white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="应付金额:"
                android:textColor="@color/tvGray"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="￥299"
                android:textColor="@color/tvOrange"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_go_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_go_pay"
                android:text="去支付"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/shape_orange_fillet"
                android:textColor="@color/tvWhite"
                android:textSize="@dimen/sp_28"
                android:gravity="center"
                android:padding="@dimen/dp_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>