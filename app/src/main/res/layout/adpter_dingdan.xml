<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_50"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardBackgroundColor="@color/colorGray"
    android:layout_marginVertical="@dimen/dp_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/dp_15"
      >
      <TextView
          android:id="@+id/ddphone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="订单号码："
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          />
      <TextView
          android:id="@+id/phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="hhshshshsh"
          app:layout_constraintLeft_toRightOf="@+id/ddphone"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="已完成"
          android:textColor="#0EE32A"
          android:textSize="@dimen/dp_25"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:textSize="@dimen/dp_25"
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_50"
          app:layout_constraintTop_toBottomOf="@id/ddphone"
          app:layout_constraintLeft_toLeftOf="parent"
          android:text="yiduiyi"
          android:gravity="center_vertical"
          />
      <TextView
          android:id="@+id/xdtime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="下单时间："
          app:layout_constraintTop_toBottomOf="@id/name"
          app:layout_constraintLeft_toLeftOf="parent"
          />
      <TextView
          android:id="@+id/time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="hhshshshsh"
          app:layout_constraintLeft_toRightOf="@+id/xdtime"
          app:layout_constraintTop_toBottomOf="@id/name"
          />
      <TextView
          android:id="@+id/price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="500"
          android:textColor="@color/colorOrange"
          android:textSize="@dimen/dp_25"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          />
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>