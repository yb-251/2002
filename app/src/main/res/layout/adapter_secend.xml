<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_40"
    app:cardCornerRadius="@dimen/dp_40"
    app:cardBackgroundColor="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.jzvd.JzvdStd
            android:id="@+id/jzPlayer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"/>
       <LinearLayout
           android:id="@+id/lin_word"
           app:layout_constraintLeft_toRightOf="@+id/jzPlayer"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/image_love"
           android:orientation="vertical"
           android:gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dp_150">
           <TextView
               android:id="@+id/txt_ex"
               android:text="节奏练习"
               android:textSize="@dimen/sp_25"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <ImageView
               android:src="@drawable/ic_start"
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_50"/>
       </LinearLayout>
        <ImageView
            android:id="@+id/image_love"
            android:src="@mipmap/ic_head"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/lin_word"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <RelativeLayout
            android:id="@+id/weekHouse"
            app:layout_constraintTop_toBottomOf="@+id/jzPlayer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:id="@+id/week"
                android:text="声乐系统课"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/house"
                android:gravity="center"
                android:text="声乐系统课"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/pl"
            android:gravity="center"
            android:background="@drawable/shape_radio"
            app:layout_constraintTop_toBottomOf="@+id/weekHouse"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintRight_toRightOf="parent"
            android:text="查看点评"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>