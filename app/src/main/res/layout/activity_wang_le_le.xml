<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F8F9EB"
    android:layout_height="match_parent"
    tools:context=".lihaha.WangLeLeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/text_1"
            android:textStyle="bold"
            android:text="排名情况"
            android:textSize="@dimen/dp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image1"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/text_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="fitXY"
            android:src="@mipmap/wanglele1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"/>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginLeft="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="@id/image1"
            app:layout_constraintTop_toTopOf="@id/image1"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="@dimen/dp_200"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="3232"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="8"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="北京市"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout

            app:layout_constraintLeft_toLeftOf="@id/ll"
            app:layout_constraintTop_toBottomOf="@id/ll"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_200"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="喜欢数"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="排名"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="城市"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/colorBlack"
            android:id="@+id/text_xinxi"
            android:textStyle="bold"
            android:text="选手信息"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/image1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/text_xinxi"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/wanglel"
            android:id="@+id/image2"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"/>
        <TextView
            android:id="@+id/text_wanglele"
            android:textStyle="bold"
            android:text="王乐乐"
            android:textSize="@dimen/dp_14"

            android:layout_marginLeft="@dimen/dp_15"
            app:layout_constraintTop_toTopOf="@+id/image2"
            app:layout_constraintLeft_toRightOf="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_size"
            android:layout_marginTop="@dimen/dp_5"
            android:text="性别：男"
            android:textSize="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/text_wanglele"
            app:layout_constraintLeft_toLeftOf="@+id/text_wanglele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_age"
            android:layout_marginTop="@dimen/dp_5"
            android:text="年龄：11岁"
            android:textSize="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/text_size"
            app:layout_constraintLeft_toLeftOf="@+id/text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_leixing"
            android:layout_marginTop="@dimen/dp_5"
            android:text="参赛类型：小提琴演奏"
            android:textSize="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/text_age"
            app:layout_constraintLeft_toLeftOf="@+id/text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_stud"
            android:layout_marginTop="@dimen/dp_5"
            android:text="指导学校：音符音乐学校"
            android:textSize="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/text_leixing"
            app:layout_constraintLeft_toLeftOf="@+id/text_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_tech"
            android:layout_marginTop="@dimen/dp_5"
            android:text="指导教师：王桂丽"
            android:textSize="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/text_stud"
            app:layout_constraintLeft_toLeftOf="@+id/text_stud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_zuoping"
            android:textStyle="bold"
            android:text="选手信息"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/image2"
            app:layout_constraintLeft_toLeftOf="@id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image4"
            android:src="@mipmap/wanglele2"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_zuoping"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"/>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_marginLeft="@dimen/dp_30"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="@id/image4"
            app:layout_constraintTop_toBottomOf="@id/image4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="作品说明："
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="《xxx进行曲》xxxxxxx"
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="作品编号："
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:text="123456789"
                android:textSize="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <Button
            android:text="投  票"
            android:textColor="#fff"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView

        android:src="@mipmap/wanglele3"
        android:id="@+id/image5"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"/>
</androidx.constraintlayout.widget.ConstraintLayout>