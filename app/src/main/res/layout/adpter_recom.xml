<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5"
    android:orientation="vertical"
    android:layout_height="wrap_content">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="@dimen/dp_5"
       >
       <ImageView
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:id="@+id/recom_img"
           android:layout_width="@dimen/dp_120"
           android:layout_height="@dimen/dp_100"
           android:src="@mipmap/shou_img"
           />
       <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/recom__text"
       android:text="ahahahahaaha"
       android:scaleType="centerCrop"
       app:layout_constraintLeft_toRightOf="@+id/recom_img"
       app:layout_constraintTop_toTopOf="parent"

       />
       <TextView
           android:layout_width="@dimen/dp_50"
           android:layout_height="@dimen/dp_20"
          android:background="#F5E133"
           android:gravity="center"
           android:text="NEW"
           android:textSize="@dimen/dp_10"

           app:layout_constraintTop_toTopOf="parent"
           android:textColor="#ffffff"
           app:layout_constraintRight_toRightOf="parent"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/recom__content"
           android:text="ahahahahaaha"
           android:scaleType="centerCrop"
           app:layout_constraintTop_toBottomOf="@+id/recom__text"
           android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintLeft_toRightOf="@id/recom_img"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:paddingLeft="10dp"
           android:paddingTop="5dp"
           android:paddingRight="10dp"
           android:paddingBottom="5dp"
           android:text="2178人参加"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           />

   </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="报名"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#ffffff"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timename"
            android:textSize="@dimen/dp_10"
            android:text="限时报名"
            android:textColor="#FA5549"
            android:scaleType="centerCrop"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>