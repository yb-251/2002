<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/vp3" />

    <TextView
        android:id="@+id/jump"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_boder"
        android:padding="10dp"
        android:text="立即体验"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:textColor="@color/tvWhite"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_50">
        <ImageView
            android:id="@+id/img_1_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_1_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_2_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/img_2_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:layout_marginLeft="@dimen/dp_10"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_3_normal"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_normal"
            android:layout_marginLeft="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/img_3_select"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/shape_dot_select"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>